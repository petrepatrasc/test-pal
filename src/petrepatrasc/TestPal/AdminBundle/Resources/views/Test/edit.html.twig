{% extends '@TestPalAdmin/Layout/admin-layout.html.twig' %}

{% block content %}
    <h2 class="content-title">{{ test.name }}<br>
        <small>&raquo; {{ test.permalink }} ({{ test.length }} minutes)</small>
    </h2>

    <div class="row">
        <form class="col-xs-5" method="post" action="{{ path('tp.admin.test.update_one', {'permalink': test.permalink}) }}">
            <div class="form-group">
                <label for="name">Name: </label>
                <input class="form-control" type="text" id="name" name="name" value="{{ test.name }}" />
            </div>

            <div class="form-group">
                <label for="length">Length: </label>
                <input class="form-control" type="text" id="length" name="length" value="{{ test.length }}" />
            </div>

            <div class="form-group">
                <label for="permalink">Permalink: </label>
                <input disabled="disabled" class="form-control" type="text" id="permalink" name="permalink" value="{{ test.permalink }}" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Update" />
            </div>
        </form>
    </div>
{% endblock %}